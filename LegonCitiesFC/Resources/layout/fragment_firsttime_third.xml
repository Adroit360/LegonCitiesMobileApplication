
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <TextView
        android:text="BE A PART OF THE ROYALS"
        android:layout_margin="10dp"
        android:textColor="#000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:textSize="20dp" />

    <View
        android:layout_marginTop="60dp"
        android:background="@android:color/holo_red_dark"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="50dp"
        android:layout_height="3dp" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="350dp"
        android:id="@+id/ftt_cutjersey_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/cutjersey">

    <TextView
        android:text="YOUR NAME"
            android:id="@+id/ftt_txt_jerseybackname"
        android:layout_marginTop="100dp"
        android:textColor="#ffffffff"
            
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp" />

    <TextView
        android:text="0"
        android:layout_marginTop="140dp"
        android:textColor="#ffffffff"
        android:id="@+id/ftt_txt_jerseybacknumber"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="70dp" />


    </android.support.constraint.ConstraintLayout>


    <TextView
        android:text="This application will take your info and includes access to exclusive content and competetions"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ftt_cutjersey_container"
        android:layout_width="300dp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/fft_appcontent_text"
        android:textSize="15dp" />

       <Button
        android:text="Join our fun club"
        android:layout_width="wrap_content"
        android:background="@drawable/border_button"
        android:layout_height="wrap_content"
        android:id="@+id/btn_ftt_signin"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/fft_appcontent_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

